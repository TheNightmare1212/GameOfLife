<Window x:Class="FieldMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FieldMaker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top">
            <TextBox Name="Width" Width="50" />
            <TextBox Name="Height" Width="50" />
            <Button Content="Перестройка" Click="Button_Click" />
            <Button Content="Очистка" Click="Button_Click_1" />
            <Button Content="Save" Click="Button_Click_3" />
        </WrapPanel>
    <Grid Name="special" ShowGridLines="True"  >
        
    </Grid>
    </DockPanel>
</Window>
